@model IEnumerable<ExpenseCategoryDTO>
@{
	 ViewData["Title"] = "CategoryList";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script src="https://use.fontawesome.com/c7a575b4de.js"></script>
<div class="row">
    <div class="col-12">
        <h2>Category</h2>
        <div class="d-flex justify-content-end mb-1">
            <a asp-controller="CategoryUI" asp-action="Create" class="btn btn-primary btn-sm"> <i class="fa fa-plus"></i>Create</a>
        </div>
    </div>
    <div class="col-12">
        <table style="width:100%;text-align:center;border-collapse:collapse;background-color:rgb(254, 249, 231);">
            <thead class="table-light bg-light">
                <tr style="background-color:rgb(191, 201, 202);">
                    <th>SL</th>
                    <th>
                        CategoryName
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
               @{
                   var i=1;
                @foreach (var data in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@data.CategoryName</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-controller="CategoryUI" asp-action="Edit" asp-route-id="@data.CategoryID"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
                            <a class="btn btn-danger btn-sm" asp-controller="CategoryUI" asp-action="Delete" asp-route-id="@data.CategoryID"><i class="fa fa-trash-o" aria-hidden="true"></i>Delete</a>
                        </td>
                    </tr>
                    i++;
                }
                }
            </tbody>
        </table>
    </div>
</div>





